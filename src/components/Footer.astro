---
import { version } from "./getVersion";
import { useTranslations } from "../i18n/utils";

const buildTime = new Date().toLocaleString('de-DE', {
  year: 'numeric',
  month: '2-digit',
  day: '2-digit',
  hour: '2-digit',
  minute: '2-digit',
  second: '2-digit',
  timeZone: 'Europe/Berlin',
  timeZoneName: 'short'
});
const t = useTranslations(Astro.url.pathname)
---

<style>
  .footer {
    margin-top: 20px;
    font-size: 12px;
    color: #555;
    text-align: center;
    display: flex;
    flex-direction: row;
    justify-content: center;
    gap: 10px;
  }
  .version {
  }
  .source-link {
    text-decoration: none;
  }
</style>

<div class="footer">
  <span class="generatedat">{t('generatedat')} {buildTime}</span>
  <span class="or">|</span>
  <span class="version">{t('version')} {version}</span>
  <span class="or">|</span>
  <a class="source-link" href="https://github.com/firsttris/astro-cv" target="_blank">Source Code</a>
</div>