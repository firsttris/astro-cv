---
import { useTranslations } from "../../i18n/utils";
import Skill from "./Skill.astro";
import { mySkills } from "./mySkills";
import { type LocaType } from "../../i18n/utils";
import SkillLegend from "./SkillLegend.astro";
import styled from "@emotion/styled";
import { Typography } from "../Typography";
import AvoidPageBreakInside from "../AvoidPageBreakInside.astro";

const t = useTranslations(Astro.url.pathname);

const SkillsHeader = styled.div({
  marginBottom: "16px",
});

---

<AvoidPageBreakInside>
  <SkillsHeader>
    <Typography className="h1">{t("skills")}</Typography>
  </SkillsHeader>
  
  {
    mySkills.map((skill) => (
      <Skill title={t(skill.title as LocaType)} skills={skill.skills} />
    ))
  }
  <SkillLegend />
</AvoidPageBreakInside>
