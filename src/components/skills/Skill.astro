---
import styled from "@emotion/styled";
import ChipsWithIcon from "./ChipsWithIcon.astro";
import { type Skill } from "./technologies";
import { Typography } from "../Typography";

interface Props {
  title: string;
  skills: Skill[];
}

const Container = styled.div({
  display: "flex",
  marginBottom: "12px",
});

const TitleBox = styled.div({
  minWidth: "110px",
  paddingTop: "5px",
  "@media (max-width: 425px)": {
    display: "none",
  },
});

const SkillsBox = styled.div({
  flex: 1,
});

const { title, skills } = Astro.props;
---

<Container>
  <TitleBox>
    <Typography className="label">{title}</Typography>
  </TitleBox>
  <SkillsBox>
    <ChipsWithIcon skills={skills} />
  </SkillsBox>
</Container>
