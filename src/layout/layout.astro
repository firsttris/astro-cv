---
import "@fontsource/roboto/300.css";
import "@fontsource/roboto/400.css";
import "@fontsource/roboto/500.css";
import "@fontsource/roboto/700.css";
import "./../mdx/mdx.css";

import { useTranslations } from "../i18n/utils";

const t = useTranslations(Astro.url.pathname);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"
    />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Clean Code and Test Automation Specialist with experience in React, TypeScript, MUI, and Node.js." />
    <meta name="keywords" content="Softwareentwickler, Software developer, CV, Resume, Freelance, Clean Code, Test Automation, React, TypeScript, MUI, Node.js" />
		<meta property="og:title" content=`CV Tristan Teufel, ${t('business-title')}` />
    <meta property="og:description" content="Clean Code and Test Automation Specialist with experience in React, TypeScript, MUI, and Node.js." />
    <meta property="og:image" content="https://avatars.githubusercontent.com/u/1709260" />
    <meta property="og:url" content="https://cv.teufel-it.de" />
    <title>CV Tristan Teufel, {t('business-title')}</title>
  </head>
  <body>
    <div class="container">
      <slot />
    </div>
  </body>
</html>
<style is:global>
  body {
    font-family: "Roboto", sans-serif;
  }

  @media print {
    @page {
      size: portrait;
    }
  }

  .container {
    max-width: 852px; /* md */
    display: flex;
    flex-direction: column;
    margin: 0 auto;
    padding-left: 16px;
    padding-right: 16px;
    gap: 20px;
  }

  /* Reveal animations */
  @keyframes reveal {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .reveal {
    opacity: 0;
    animation: reveal 0.6s ease-out forwards;
    animation-delay: var(--delay, 0s);
  }

  @media print {
    .reveal {
      opacity: 1;
      animation: none;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .reveal {
      opacity: 1;
      animation: none;
    }
  }
</style>
